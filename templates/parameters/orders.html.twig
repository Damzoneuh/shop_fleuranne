{% extends 'base.html.twig' %}

{% block title %}{{ parent()}} Commandes{% endblock %}
{% block javascripts %}{{ parent() }}{% endblock %}

{% block body %}
    {% if orders|length > 0 %}
        <div class="container-fluid">
            <div class="row">
                <div class="col bg-grey-inherit mt-4 mb-4">
                    <h1 class="text-pink mt-5 mb-5 text-center">Mes Commandes</h1>
                    <table class="table table-striped table-responsive-sm">
                        <tbody>
                            {% for order in orders %}
                                <tr>
                                    <td>
                                        {{ order.invoice.payment.transactionUuid }}
                                    </td>
                                    <td>
                                        {% if order.status == 'En attente' %}
                                            <div class="progress" style="height: 30px;">
                                                <div class="progress-bar bg-warning" role="progressbar" style="width: 35%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
                                                    En attente
                                                </div>
                                            </div>
                                        {% endif %}
                                        {% if order.status == 'En cours de préparation' %}
                                            <div class="progress" style="height: 30px;">
                                                <div class="progress-bar bg-primary" role="progressbar" style="width: 75%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100">
                                                    En cours de préparation
                                                </div>
                                            </div>
                                        {% endif %}
                                        {% if order.status == 'Prête' or order.status == 'Expédié' %}
                                            <div class="progress" style="height: 30px;">
                                                <div class="progress-bar bg-success" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">
                                                    {{ order.status }}
                                                </div>
                                            </div>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    {% else %}
        <div class="container-fluid">
            <div class="row">
                <div class="col mt-5 mb-5">
                    <h1 class="text-center text-grey">Aucune commande</h1>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}